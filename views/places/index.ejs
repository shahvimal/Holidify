<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To Holidify!</h1>
             <p>View our hand-picked places from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/places/new">Add New Place</a>
             </p>
              <p>
              <form action="/places" method="GET" class="form-inline" id="place-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Place search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="place-grid">
        <% places.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= place.image %>">
                   <div class="caption">
                       <h4><%= place.name %></h4>
                   </div>
                   <p>
                       <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
